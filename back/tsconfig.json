{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2019",

    /* Modules */
    "module": "commonjs",

    /* ⬇️ ESTAS DOS SON LAS CLAVES */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop & checks */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,

    /* Decorators (dejamos lo tuyo) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
